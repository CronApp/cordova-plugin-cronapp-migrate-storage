<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-ionic-migrate-storage" version="0.0.1">
    <name>cordova-plugin-ionic-migrate-storage</name>
    <description>Cordova plugin that migrates WebSQL, localStorage and IDB data from UIWebview to WkWebView</description>
    <keywords>ecosystem:cordova,cordova,cordova-ios,uiwebview,wkwebview,websql,localstorage,indexeddb</keywords>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="MigrateStorage">
                <param name="ios-package" value="MigrateStorage" onload="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/MigrateStorage.h" />
        <source-file src="src/ios/MigrateStorage.m" />

        <framework src="FMDB" type="podspec" spec="~> 2.7.4" />
    </platform>

</plugin>